 <h1>新增書籍</h1>

  <%= form_for(@candidate) do |f| %>
    <%= f.label :bookname, "書名" %>
    <%= f.text_field :bookname %> <br />

    <%= f.label :introduction, "簡介" %>
    <%= f.text_field :introduction %> <br />

    <%= f.label :name, "作者" %>
    <%= f.text_field :name %> <br />

    <%= f.label :price, "售價" %>
    <%= f.text_area :price %> <br />

    <%= f.submit %>
  <% end %>

  <br />
  <%= link_to '回書籍列表', candidates_path %>